<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Section: Logo, Title, Bookmark -->
        <ImageView
            android:id="@+id/ivCompanyLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_work"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_rounded_logo"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/llHeaderInfos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivCompanyLogo"
            android:layout_toStartOf="@id/ivBookmark"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senior UI/UX Designer"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_primary"/>

            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT Teknologi Nusantara"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
        
        <ImageView
            android:id="@+id/ivBookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bookmark_border"
            app:tint="@color/gray_500"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <!-- Tags / Chips -->
        <LinearLayout
            android:id="@+id/llTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llHeaderInfos"
            android:layout_alignStart="@id/llHeaderInfos"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            
            <TextView
                android:id="@+id/tvTag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design"
                android:background="@drawable/bg_chip_purple_light"
                android:textColor="@color/purple_700"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvTag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote"
                android:background="@drawable/bg_chip_gray_light"
                android:textColor="@color/gray_700"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>
                
            <TextView
                android:id="@+id/tvTag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full-time"
                android:background="@drawable/bg_chip_gray_light"
                android:textColor="@color/gray_700"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"/>
        </LinearLayout>
        
        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE"
            android:layout_below="@id/llTags"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Footer: Salary & Deadline + Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vDivider">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_attach_money"
                        app:tint="@color/gray_500"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:id="@+id/tvJobSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 12jt - 18jt"
                        android:textColor="@color/gray_700"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clock"
                        app:tint="#F97316"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:id="@+id/tvDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berakhir dalam 2 hari"
                        android:textColor="#F97316"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetailJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Detail"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/blue_primary"
                android:paddingHorizontal="20dp"/>
        </RelativeLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
