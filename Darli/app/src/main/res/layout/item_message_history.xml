<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="12dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMsgDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Feb 2026"
                android:textColor="@color/text_body_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMsgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_chip_status_accepted"
                android:backgroundTint="@color/border_subtle"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="DIBALAS"
                android:textColor="@color/web_primary"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Subject -->
        <TextView
            android:id="@+id/tvMsgSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Subjek Pesan"
            android:textColor="@color/text_heading"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Message Preview -->
        <TextView
            android:id="@+id/tvMsgPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Preview pesan..."
            android:textColor="@color/text_body_primary"
            android:textSize="13sp" />

        <!-- Admin Reply Section (expandable) -->
        <LinearLayout
            android:id="@+id/layoutReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_subtle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/bg_surface"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Balasan Admin:"
                        android:textColor="@color/web_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvReplyDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 Feb 2026"
                        android:textColor="@color/text_body_secondary"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvReplyContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Balasan admin..."
                    android:textColor="@color/text_body_primary"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Toggle Reply -->
        <TextView
            android:id="@+id/tvToggleReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Lihat Balasan"
            android:textColor="@color/web_primary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_chevron_right"
            android:drawablePadding="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
