<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/bg_card"
    app:strokeColor="@color/border_subtle"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/ivInfoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/alumni3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_hero_gradient" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvInfoCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/web_primary"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Pendidikan"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvInfoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sistem Pendidikan Darul Funun"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvInfoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Darul Funun El-Abbasiyah memiliki sistem pendidikan terpadu yang menggabungkan nilai-nilai tradisional dan modern..."
                android:textColor="@color/text_body_primary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetailInfo"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Baca Selengkapnya"
                android:textAllCaps="false"
                android:textColor="@color/web_primary"
                android:textSize="13sp"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="textEnd" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
