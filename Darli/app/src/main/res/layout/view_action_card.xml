<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <View
            android:id="@+id/viewIconBg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_blue_light" />

        <ImageView
            android:id="@+id/ivActionIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="-30dp"
            android:src="@drawable/ic_graduation_cap"
            app:tint="#3B82F6" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvActionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ustadz"
                android:textColor="#1E293B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvActionSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textColor="#94A3B8"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
