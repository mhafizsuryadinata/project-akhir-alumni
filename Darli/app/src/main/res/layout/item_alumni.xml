<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/bg_card"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAlumniPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_color="@color/web_primary"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/ivAlumniPhoto"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAlumniName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Alumni"
                android:textColor="@color/text_heading"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAlumniClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angkatan 2018"
                android:textColor="@color/text_body_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAlumniProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Web Developer"
                android:textColor="@color/web_primary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
