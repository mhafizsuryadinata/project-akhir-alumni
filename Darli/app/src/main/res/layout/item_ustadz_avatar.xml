<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="12dp">

    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="72dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUstadzPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_color="@color/border_subtle"
            app:civ_border_width="2dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_icon_settings_circle"
            android:padding="4dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvUstadzName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nama Ustadz"
        android:textColor="@color/text_heading"
        android:textSize="13sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tvUstadzRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengajar"
        android:textColor="@color/text_body_secondary"
        android:textSize="11sp" />

</LinearLayout>
