<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/border_subtle"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Photo + Info + Chat Icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Photo -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAlumni"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_placeholder"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/border_subtle" />

            <!-- Name, Batch, Profession, Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/imgAlumni"
                android:layout_toStartOf="@id/btnChat"
                android:orientation="vertical">

                <!-- Name -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Sarah Jenkins"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Batch Label -->
                <TextView
                    android:id="@+id/tvBatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="ANGKATAN 2018"
                    android:textColor="@color/web_primary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <!-- Profession Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_briefcase"
                        app:tint="@color/text_body_secondary"
                        android:contentDescription="Profession" />

                    <TextView
                        android:id="@+id/tvProfession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Senior Product Designer"
                        android:textColor="@color/text_body_primary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/web_primary"
                        android:contentDescription="Location" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="San Francisco, CA"
                        android:textColor="@color/text_body_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Chat Button -->
            <ImageView
                android:id="@+id/btnChat"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_chat"
                app:tint="@color/web_primary"
                android:contentDescription="Chat" />
        </RelativeLayout>

        <!-- View Profile Button -->
        <Button
            android:id="@+id/btnViewProfile"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/web_primary"
            android:text="View Profile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
