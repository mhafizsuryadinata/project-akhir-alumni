<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_surface"
    tools:context=".AlumniDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_card"
                android:paddingBottom="24dp">

                <!-- Toolbar Area -->
                <RelativeLayout
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_btn_secondary"
                        android:padding="8dp"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@color/text_heading"
                        android:elevation="2dp"/>

                    <TextView
                        android:id="@+id/tvHeaderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="PROFIL ALUMNI"
                        android:textColor="@color/web_primary"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>
                </RelativeLayout>

                <!-- Profile Image -->
                <RelativeLayout
                    android:id="@+id/profileContainer"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/toolbar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_placeholder"
                        app:civ_border_width="4dp"
                        app:civ_border_color="@color/bg_card"/>

                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/web_primary"
                        android:background="@drawable/bg_icon_settings_circle"
                        android:padding="2dp"/>
                </RelativeLayout>

                <!-- Identity -->
                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileContainer"
                    android:layout_marginTop="16dp"
                    android:text="Nama Alumni, S.T."
                    android:textAlignment="center"
                    android:textColor="@color/text_heading"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="24dp"/>

                <TextView
                    android:id="@+id/tvDetailPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDetailName"
                    android:layout_marginTop="4dp"
                    android:text="Alumni 2015 - 2021"
                    android:textAlignment="center"
                    android:textColor="@color/web_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <!-- Chips -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDetailPeriod"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_secondary"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical"
                        android:elevation="2dp"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_work"
                            app:tint="@color/web_primary"/>
                        <TextView
                            android:id="@+id/tvDetailProfession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="SOFTWARE ENGINEER"
                            android:textColor="@color/text_heading"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_secondary"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical"
                        android:elevation="2dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/web_primary"/>
                        <TextView
                            android:id="@+id/tvDetailAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="PADANG, SUMBAR"
                            android:textColor="@color/text_heading"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <!-- Bio Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-12dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:strokeColor="@color/border_subtle"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PESAN SINGKAT / BIO"
                        android:textSize="10sp"
                        android:textColor="@color/text_body_secondary"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvDetailBio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fokus pada pengembangan ekosistem teknologi digital..."
                        android:textSize="14sp"
                        android:textColor="@color/text_body_primary"
                        android:lineSpacingMultiplier="1.4"/>
                        
                    <!-- Social Links inside Bio Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">
                        
                        <!-- Instagram -->
                        <LinearLayout
                            android:id="@+id/layoutInstagramApp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:paddingVertical="8dp"
                            android:layout_marginBottom="4dp">
                             <ImageView
                                android:id="@+id/btnInstagram"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_instagram"
                                app:tint="@color/status_info"/>
                             <TextView
                                android:id="@+id/tvInstagramApp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@instagram"
                                android:textColor="@color/text_body_primary"
                                android:textSize="14sp"
                                android:layout_marginStart="12dp"/>
                        </LinearLayout>
                            
                        <!-- LinkedIn -->
                        <LinearLayout
                            android:id="@+id/layoutLinkedinApp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:paddingVertical="8dp">
                             <ImageView
                                android:id="@+id/btnLinkedin"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_linkedin"
                                app:tint="@color/web_primary"/>
                             <TextView
                                android:id="@+id/tvLinkedinApp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="linkedin.com/in/user"
                                android:textColor="@color/text_body_primary"
                                android:textSize="14sp"
                                android:layout_marginStart="12dp"
                                android:maxLines="1"
                                android:ellipsize="end"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Education & Career Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_graduation_cap"
                    app:tint="@color/text_body_secondary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDIDIKAN &amp; KARIR"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_body_secondary"
                    android:letterSpacing="0.1"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Education Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                app:strokeColor="@color/border_subtle"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Education Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_btn_secondary"
                            android:src="@drawable/ic_graduation_cap"
                            app:tint="@color/web_primary"
                            android:padding="8dp"/> 

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PENDIDIKAN LANJUTAN"
                                android:textColor="@color/web_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvDetailEducation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data Pendidikan"
                                android:textColor="@color/text_heading"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Map View Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mapContainer"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/border_subtle"
                app:strokeWidth="1dp">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    
                    <WebView
                        android:id="@+id/wvMap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                        
                    <ProgressBar
                        android:id="@+id/progressBarMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@color/web_primary"/>
                        
                    <!-- Click overlay to intercept touches and open full map app -->
                    <View
                        android:id="@+id/viewMapOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"/>
                        
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:gravity="center_vertical"
                         android:layout_alignParentBottom="true"
                         android:layout_alignParentStart="true"
                         android:layout_margin="16dp"
                         android:background="@drawable/bg_btn_secondary"
                         android:alpha="0.9"
                         android:paddingHorizontal="12dp"
                         android:paddingVertical="8dp">
                         
                         <ImageView
                             android:layout_width="20dp"
                             android:layout_height="20dp"
                             android:src="@drawable/ic_location"
                             app:tint="@color/web_primary"/>
                             
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Dilihat dari Lokasi Saat Ini"
                             android:textColor="@color/text_heading"
                             android:textStyle="bold"
                             android:textSize="12sp"
                             android:layout_marginStart="8dp"/>
                     </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/bg_card"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendEmail"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Email Alumnus"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_email"
            app:iconGravity="textStart"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            app:iconTint="@color/white"
            android:backgroundTint="@color/web_primary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContactWhatsApp"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="WhatsApp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_whatsapp"
            app:iconGravity="textStart"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            app:iconTint="@color/white"
            android:backgroundTint="@color/status_success"/>

    </LinearLayout>
</RelativeLayout>
