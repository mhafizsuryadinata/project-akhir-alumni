<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/ivEventImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/gray_light" />

            <TextView
                android:id="@+id/tvEventCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reuni Akbar"
                android:background="@drawable/bg_badge_info"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_margin="12dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reuni Akbar Angkatan 2020"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar_month"
                    app:tint="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Januari 2024 â€¢ 08:00 WIB"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_secondary"/>
                <TextView
                    android:id="@+id/tvEventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aula Utama Pondok"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetailEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat Detail"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/blue_primary"/>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
